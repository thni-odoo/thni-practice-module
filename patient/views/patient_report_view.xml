<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Form -->
    <record id="patient_report_view" model="ir.ui.view">
        <field name="name">patient_report_formview</field>
        <field name="model">patient.report</field>
        <field name="arch" type="xml">
            <form class="form o_appointment_appointments_list_form pt-3">
                <header>
                    <button name="pat_invo" class="oe_stat_button" type="object" string="Invoice"/>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="date"/>
                            <br/>
                            <field name="title"/>
                        </h1>
                    </div>
                    <group>
                        <field name="report_type"/>
                    </group>
                    <!-- <group> -->
                    <notebook>
                        <page string="Basic Report">
                            <group>
                                <group>
                                    <field name="surgical_history"/>
                                    <field name="addiction"/>
                                    <field name="physical_activity_level"/>
                                </group>
                                <group>
                                    <field name="armed_forces"/>
                                    <field name="current_medicine"/>
                                    <field name="mental_activity_level"/>
                                    <!-- <field name="physical_activity_level"/>
                                        <field name="physical_activity_level"/>
                                        <field name="physical_activity_level"/> -->
                                </group>
                            </group>
                        </page>
                        <page string="Symptom and Conclusion">
                            <group>
                                <field name="today_description"/>
                                <field name="symptoms"/>
                                <field name="conclusion"/>
                                <field name="work_limitation"/>

                            </group>
                        </page>
                        <page string="Prescription">
                            <field name="medicine_info_ids">
                                <tree>
                                    <field name="medname"/>
                                    <field name="med_days"/>
                                    <field name="med_when"/>
                                    <field name="amount"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="medname"/>
                                            <field name="med_days"/>
                                            <field name="med_when"/>
                                            <field name="amount"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Doctor Reference">
                            <group>
                                <field name="doctor_tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <field name="doctor_id"/>
                                <field name="patient_id"/>
                            </group>
                        </page>
                    </notebook>

                    <!-- </group> -->
                </sheet>
                
            </form>
        </field>
    </record>
    <!-- Tree View -->
    <record id="patient_report_tree_view" model="ir.ui.view">
        <field name="name">patient_report_treeview</field>
        <field name="model">patient.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="title"/>
                <field name="report_type"/>
                <field name="symptoms"/>
                <!-- <button type="action" name="%(patient_report_action)d" string="Go To"/> -->
            </tree>
        </field>
    </record>
</odoo>