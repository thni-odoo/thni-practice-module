<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Tree View -->
    <record id="patient_info_tree_view" model="ir.ui.view">
        <field name="name">patient_info_treeview</field>
        <field name="model">patient.info</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state=='recovered'" decoration-bf="state=='firstmeet'or state=='carriermeet'" decoration-success="state=='appointmentbooked' or state=='firstmeet'or state=='carriermeet'">
                <field name="name" />
                <field name="email_id"/>
                <field name="phone_no"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="age"/>
                <field name="prior" widget="priority"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
        
    </record>
    <!-- Form -->
    <record id="patient_info_form_view" model="ir.ui.view">
        <field name="name">patient_info_formview</field>
        <field name="model">patient.info</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" class="o_field_statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="email_id" widget="email"/>
                        </group>
                        <group>
                            <field name="prior" widget="priority"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="age"/>
                            <field name="gender" widget="radio" options="{'horizontal':true}"/>
                            <field name="allergies"/>
                        </group>
                        <group>
                            <field name="weight"/>
                            <field name="height"/>
                            <field name="current_medication"/>

                        </group>
                        <notebook>
                            <page string="More Details">
                                <group>
                                    <group>
                                        <field name="phone_no" widget="phone"/>
                                        <field name="bmi"/>
                                        <field name="allergies_description" attrs="{'invisible': [('allergies', '=', False)]}"/>
                                    </group>
                                    <group>
                                        <field name="address"/>
                                        <field name="bmi_weight"/>
                                        <field name="current_medication_description" attrs="{'invisible': [('current_medication', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Report">
                                <field name="report_info_ids">
                                    <tree>
                                        <field name="date"/>
                                        <field name="title"/>
                                        <field name="report_type"/>
                                        <field name="symptoms"/>
                                        <!-- <field name="tag"/> -->
                                        <!-- <button type="action" name="%(patient_report_action)d" string="Go To"/> -->
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>
    <!-- Search -->
    <record id="patient_info_search_view" model="ir.ui.view">
        <field name="name">patient_info_searchview</field>
        <field name="model">patient.info</field>
        <field name="arch" type="xml">
            <search string="searches">
                <field name="name"/>
                <field name="email_id"/>
                <field name="phone_no"/>
                <field name="address"/>
                <!-- <field name="gender"/> -->
                <!-- <field name="age"/> -->
                <!-- <separator/> -->
                <!-- <filter string="State Search" name="search_state" domain="[('state', 'in', ['new','offer_received'])]"/> -->
                <group expand="1" string="Group By">
                    <filter string="Gender" name="search_gender" context="{'group_by':'gender'}"/>
                    <filter string="Age" name="search_age" context="{'group_by':'age'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Action -->
    <record id="patient_info_action" model="ir.actions.act_window">
        <field name="name">Patient Info</field>
        <field name="res_model">patient.info</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Click here to create a new tag.
            </p>
        </field>
    </record>
</odoo>